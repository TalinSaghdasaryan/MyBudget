#include <iostream>
#include <string>
#include <sstream>
using namespace std;

class Income {
private:
	double amount;
	string type;
public:
	void getIncome() {
	    cout<<"Please enter the amount of your income";
		cin >> amount;
		cout<<"Please enter the type of your income";
		getline(cin, type);
	}
	double getAmount() {
		return amount;
	}
};

class Outcome {
private:
	double amount = 0.0;
	string type;
	double current = 0.0;
	double percentage;
	double budget;
public:
	void getOutcome(double realincome) {
	    cout<<"Please enter the type of your amount "<<endl;
		cin >> type;
		cout<<"Please enter how much of your income you would like to spend on this outcome"<<endl;
		cin >> percentage;
		budget = realincome*percentage / 100;
	}
	string getType() {
		return type;
	}
	void coutType() {
		cout << type;
	}
	double getAmount() {
		return amount;
	}
	void coutAmount() {
		cout << amount;
	}
	double getBudget() {
		return budget;
	}
	void getOutcomeAmount() {
	    cout<<"Enter the amount of your outcome"<<endl;
		cin >> current;
		amount = amount + current;
		budget = budget - current;
		if (budget <= 0) {
			cout << "Error 500" << endl;
			/*cout<<"Would you like to:"<<endl<<"1. take this out of another income or "<<endl<<"2. do we not take this BS into account?"<<endl;
			cout<<"If 1, press 1, if 2 press 2";
			int a;
			cin>>a;
			if(a == 1){
			}
			if (a==2){
			}
			else{
			cout<<"Your input is incorrect"<<endl;
			}*/
		}
	}
};
void bs(Outcome *outcome, int n);
int main() {
	double realincome = 0.0;
	int m;
    cout<<"Please enter the number of the incomes you would like"<<endl;
	cin >> m;
	Income * income;
	income = new Income[m];
	for (int i = 0; i<m; i++) {
		income[i].getIncome();
		realincome = realincome + income[i].getAmount();
	}
	int n;
	cout<<"Please enter the number of outcomes you would like"<<endl;
	cin >> n;
	Outcome *outcome;
	outcome = new Outcome[n];
	for (int i = 0; i<n; i++) {
		outcome[i].getOutcome();
	}
	int a = 1;
	string type;
	cout<<"Enter your outcome"<<endl;
	cin>>type;
	while (a == 1) {
		for (int i = 0; i<n; i++) {
			if (type == outcome[i].getType()) {
				outcome[i].getOutcomeAmount();
			}
		}
		cout<<"Enter your outcome"<<endl;
		cin >> a;
	}
	bs(outcome, n);
	return 0;
}
void bs(Outcome *outcome, int n) {
	int ooverall = 0;
	int ioverall = 0;
	for (int i = 0; i<n; i++) {
		ooverall = ooverall + outcome[i].getAmount();
	}
	for (int i = 0; i<n; i++) {
		ioverall = ioverall + outcome[i].getBudget();
	}
	for (int i = 0; i<n; i++) {
		cout << "On "; 
		outcome[i].coutType(); 
		cout << " you have spent "; 
		outcome[i].coutAmount();
	}
	cout << "Overall you have spent " << ooverall << endl;
	cout << "You have " << ioverall << " left" << endl;
}
