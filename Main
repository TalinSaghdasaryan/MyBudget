#include <iostream>
#include <string>
#include <sstream>
using namespace std;

class Income {
private:
	double amount;
	string type;
public:
	Income(){
	    amount = 0;
	}
	void setIncome() {
	    cout<<"Please enter the amount of your income in dollars"<<endl;
		cin >> amount;
		cout<<"Please enter the type of your income (for example: salary)"<<endl;
		cin>>type;
	}
	double getAmount() {
		return amount;
	}
};

class Outcome {
private:
	double amount;
	string type;
	double current;
	double percentage;
	double budget;
public:
	Outcome(){
	    amount = 0;
	    current = 0;
	}
	void setOutcome(double realincome) {
	    cout<<"Please enter the type of the outcome you are planning to budget (for example: food )"<<endl;
		cin >> type;
		cout<<"Please enter which percent of your income you would like to spend on this outcome"<<endl;
		cin >> percentage;
		budget = realincome*percentage / 100;
	}
	string getType() {
		return type;
	}
	double getAmount() {
		return amount;
	}
	double getBudget() {
		return budget;
	}
	void getOutcomeAmount() {
	    cout<<"Enter the amount of your outcome in dollars "<<endl;
		cin >> current;
		amount = amount + current;
		budget = budget - current;
		if (budget <= 0) {
			cout << "Error" << endl << "Your budget has not been updated" << endl;
			budget = budget + current;
			amount = amount - current;
		}
	}
};

void report(Outcome *outcome, int n);

int main() {
	double realincome = 0.0;
	int m;
    cout<<"Please enter the number of the incomes you would like"<<endl;
	cin >> m;
	Income * income;
	income = new Income[m];
	for (int i = 0; i<m; i++) {
	    cout<<"Enter the information concerning income number "<<i+1<<endl;
		income[i].setIncome();
		realincome = realincome + income[i].getAmount();
	}
	int n;
	cout<<"Please enter the number of outcomes you would like"<<endl;
	cin >> n;
	Outcome *outcome;
	outcome = new Outcome[n];
	cout<<"Please budget your income now"<<endl;
	for (int i = 0; i<n; i++) {
	    cout<<"Enter the information concerning outcome number "<<i+1<<endl;
		outcome[i].setOutcome(realincome);
	}
	cout<<"Enter the outcomes you have spent"<<endl;
	int a = 1;
	string type;
	while (a == 1) {
	    cout<<"Enter the type of your outcome"<<endl;
	    cin>>type;
		for (int i = 0; i<n; i++) {
			if (type == outcome[i].getType()) {
				outcome[i].getOutcomeAmount();
			}
		}
		cout<<"Press 1 to enter the next outcome or press 0 to terminate"<<endl;
		cin >> a;
	}
	report(outcome, n);
	return 0;
}
void report(Outcome *outcome, int n) {
	int ooverall = 0;
	int ioverall = 0;
	for (int i = 0; i<n; i++) {
		ooverall = ooverall + outcome[i].getAmount();
	}
	for (int i = 0; i<n; i++) {
		ioverall = ioverall + outcome[i].getBudget();
	}
	for (int i = 0; i<n; i++) {
		cout << "On ";
		cout << outcome[i].getType();
		cout << " you have spent "; 
		cout << outcome[i].getAmount()<<endl;
	}
	cout << "Overall you have spent " << ooverall << endl;
	cout << "You have " << ioverall << " left" << endl;
}
